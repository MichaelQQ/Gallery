{
  "parser": "babel-eslint",
  "rules": {
    "indent": [error, 2],
    "quotes": [error, "single"],
    "linebreak-style": [error, "unix"],
    "semi": [error, "always"],
    "no-console": [warn],
    "no-underscore-dangle": [warn]
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
  ],
  "settings": {
    "import/resolve": {
      "extensions": [ ".es6", ".js", ".jsx" ]
    },
    "import/parser": "babel-eslint"
  },
  "plugins": [
    "react"
  ]
}
